{
    // @notice(stdamtt): Vim isout of alphabetical order
    // cause it's just easier to edit it first.

    //
    // VIM
    //
    //--------------------------------------------------------------------------
    "vim.leader":                "<Space>",
    "vim.startofline":           true,
    "vim.overrideCopy":          false,
    "vim.useSystemClipboard":    true,
    "vim.statusBarColorControl": true,
    //    Colors
    "vim.statusBarColors.normal":                ["#A0A1A8", "#000"],
    "vim.statusBarColors.insert":                ["#d65656", "#000"],
    "vim.statusBarColors.visual":                ["#569CD6", "#000"],
    "vim.statusBarColors.visualline":            ["#2C884A", "#000"],
    "vim.statusBarColors.visualblock":           ["#FFD700", "#000"],
    "vim.statusBarColors.replace":               "#D08770",
    "vim.statusBarColors.commandlineinprogress": "#007ACC",
    "vim.statusBarColors.searchinprogressmode":  "#007ACC",
    "vim.statusBarColors.surroundinputmode":     "#007ACC",
    //    Bindings - Normal
    "vim.normalModeKeyBindingsNonRecursive": [
        // Go to both line start / end
        { "before": ["L"], "after": ["$"]      },
        { "before": ["H"], "after": ["^"]      },
        { "before": ["P"], "after": ["$", "p"] }, // Paste at line end...
        // Indentation...
        { "before": [">"], "commands": ["editor.action.indentLines"]  },
        { "before": ["<"], "commands": ["editor.action.outdentLines"] },
        // Join lines....
        { "before": ["<Leader>", "."], "commands": ["editor.action.quickFix"] },
    ],
    //    Bindings - Visual
    "vim.visualModeKeyBindingsNonRecursive": [
        // Go to both line start / end
        { "before": ["$"], "after": ["$", "h" ] }, // @NOTICE(stdmatt): Fix that annoying bug that the cursor goes past the end of the line -11/12/2021, 6:23:04 AM
        { "before": ["L"], "after": ["$", "h"]  },
        { "before": ["H"], "after": ["^"]       },
        // Indentation...
        { "before": [">"], "commands": ["editor.action.indentLines"]  },
        { "before": ["<"], "commands": ["editor.action.outdentLines"] },
    ],

    //
    // Debugger
    //
    //--------------------------------------------------------------------------
    "debug.onTaskErrors": "abort",
    "debug.toolBarLocation": "docked",

    //
    // Editor
    //
    //--------------------------------------------------------------------------
    "editor.renderWhitespace": "all",
    "editor.rulers": [ 80, 120 ],
    "editor.fontLigatures": true,
    "editor.minimap.renderCharacters": false,
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.fontFamily": "Jetbrains Mono Light",
    "editor.fontSize": 15,
    "editor.codeLens": false,

    //
    // Explorer
    //
    //--------------------------------------------------------------------------
    "explorer.confirmDelete": false,
    "explorer.openEditors.visible": 0,
    "explorer.confirmDragAndDrop": false,
    "explorer.autoReveal": false,
    "explorer.compactFolders": false,
    "explorer.copyRelativePathSeparator": "/",
    "explorer.openEditors.sortOrder": "alphabetical",

    //
    // Extensions
    //
    //--------------------------------------------------------------------------
    "extensions.autoUpdate":       false,
    "extensions.autoCheckUpdates": true,
        // Bracket Pair Colorizer
        "bracket-pair-colorizer-2.colorMode":               "Consecutive",
        "bracket-pair-colorizer-2.forceUniqueOpeningColor": false,
        "bracket-pair-colorizer-2.showBracketsInGutter":    true,
        "bracket-pair-colorizer-2.highlightActiveScope":    true,
        // Peacock
        "peacock.affectEditorGroupBorder":     true,
        "peacock.affectDebuggingStatusBar":    true,
        "peacock.affectPanelBorder":           true,
        "peacock.affectSideBarBorder":         true,
        "peacock.affectTabActiveBorder":       true,
        "peacock.affectStatusBar":             false,
        "peacock.affectStatusAndTitleBorders": true,
        // Todo-Tree
        // @todo(stdmatt): 12 Dec, 2021 at 08:37:14
        // asdfasdfdas
        // @notice asdfasdfadfdasasdfasd
        // asdfasdfas
        // @XXX asdfasdfasdfsda
        // asdfasdfas

        "todo-tree.regex.enableMultiLine": true,
        "todo-tree.regex.regexCaseSensitive": false,
        "todo-tree.regex.subTagRegex": "^\\s*\\((.*)\\)",
        "todo-tree.highlights.customHighlight": {
            "@todo": {
                "type":       "text",

                "foreground": "#FFD700",
                "iconColour": "#FFD700",
                "opacity": 0,

                "gutterIcon": true,
                "icon":       "hubot",
            },

            "@notice": {
                "type":       "text",

                "foreground": "#5396CE",
                "iconColour": "#5396CE",
                "opacity": 0,

                "gutterIcon": true,
                "icon":       "smiley",
            },

            "@XXX": {
                "type":       "text",

                "foreground": "#D65656",
                "iconColour": "#D65656",
                "opacity": 0,

                "gutterIcon": true,
                "icon":       "bug",
            }
        },
        "todo-tree.general.tags": [
            "@XXX",
            "@notice",
            "@todo"
        ],


    //
    // Files
    //
    //--------------------------------------------------------------------------
    "files.eol": "\n",
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": false,
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.fla": true,
        "**/*.swf": true
    },
    "files.associations": {
        "*.mold": "cpp"
    },

    //
    // MISC
    //
    //--------------------------------------------------------------------------
    "cSpell.userWords": [
        "Adeel",
        "antialiasing",
        "arkadia",
        "CFCX",
        "CFCXUI",
        "commandline",
        "coord",
        "FCXUI",
        "FCXUITTTS",
        "Gameplay",
        "GBDK",
        "grayscale",
        "mmesquita",
        "pingo",
        "repochecker",
        "Ruslan",
        "stdmatt",
        "Titlebar",
        "yoyo"
    ],

    //
    // SCM
    //
    //--------------------------------------------------------------------------
    "scm.autoReveal": false,
    "scm.countBadge": "off",

    //
    // Search
    //
    //--------------------------------------------------------------------------
    "search.useReplacePreview": false,

    //
    // Telemetry
    //
    //--------------------------------------------------------------------------
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry":     false,
    "telemetry.telemetryLevel":      "off",

    //
    // Update
    //
    //--------------------------------------------------------------------------
    "update.enableWindowsBackgroundUpdates": false,
    "update.mode": "manual",

    //
    // Workbench
    //
    //--------------------------------------------------------------------------
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.colorTheme": "Visual Assist Dark Theme",
    "workbench.editor.enablePreview": false,
    "workbench.startupEditor": "none",
    "workbench.editor.limit.value": 20,
    "workbench.editor.tabSizing": "shrink",
    "workbench.colorCustomizations": {
        "statusBar.background": "#A0A1A8",
        "statusBar.noFolderBackground": "#A0A1A8",
        "statusBar.debuggingBackground": "#A0A1A8",
        "statusBar.foreground": "#000",
        "statusBar.debuggingForeground": "#000",
        "activityBar.activeBackground": "#1a1a1a",
        "activityBar.activeBorder": "#606020",
        "activityBar.background": "#1a1a1a",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#606020",
        "activityBarBadge.foreground": "#e7e7e7",
        "sash.hoverBorder": "#1a1a1a",
        "statusBarItem.hoverBackground": "#1a1a1a",
        "statusBarItem.remoteBackground": "#000000",
        "statusBarItem.remoteForeground": "#e7e7e7",
        "titleBar.activeBackground": "#000000",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#00000099",
        "titleBar.inactiveForeground": "#e7e7e799",
        "editorGroup.border": "#1a1a1a",
        "panel.border": "#1a1a1a",
        "sideBar.border": "#1a1a1a",
        "statusBar.border": "#000000",
        "statusBar.debuggingBorder": "#000000",
        "titleBar.border": "#000000",
        "tab.activeBorder": "#1a1a1a"
    },

    //
    // Window
    //
    //--------------------------------------------------------------------------
    "window.title": "${dirty}${activeEditorShort} -- ${activeEditorMedium} -- ${rootName}",
    "window.customMenuBarAltFocus": false,
    "window.zoomLevel": 1,
    "window.dialogStyle": "custom",
    "window.enableMenuBarMnemonics": false,

    //
    // Languages...
    //
    //--------------------------------------------------------------------------
    "html.autoClosingTags": false,
    "python.linting.pylintEnabled": false,
    "csharp.suppressDotnetInstallWarning": true,
    "python.showStartPage": false,
    "csharp.testsCodeLens.enabled": false,
    "csharp.referencesCodeLens.enabled": false,
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "powershell.buttons.showRunButtons": false,
    "powershell.codeFolding.showLastLine": false,
    "powershell.codeFormatting.addWhitespaceAroundPipe": false,
    "powershell.codeFormatting.alignPropertyValuePairs": false,
    "powershell.codeFormatting.newLineAfterCloseBrace": false,
    "powershell.codeFormatting.newLineAfterOpenBrace": false,
    "powershell.codeFormatting.openBraceOnSameLine": false,
    "powershell.codeFormatting.pipelineIndentationStyle": "None",
    "powershell.codeFormatting.whitespaceAfterSeparator": false,
    "powershell.codeFormatting.whitespaceAroundOperator": false,
    "powershell.codeFormatting.whitespaceAroundPipe": false,
    "powershell.codeFormatting.whitespaceBeforeOpenBrace": false,
    "powershell.codeFormatting.whitespaceBeforeOpenParen": false,

    //
    // Security
    //
    //--------------------------------------------------------------------------
    "security.workspace.trust.untrustedFiles": "open",
    "security.workspace.trust.enabled": false,

    //
    // Terminal
    //
    //--------------------------------------------------------------------------
    "terminal.integrated.shell.windows": "c:/Program Files/PowerShell/7/pwsh.exe",
}